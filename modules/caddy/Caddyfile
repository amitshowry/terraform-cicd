http://localhost {

    #log {
    #    output file /var/log/caddy/access.log
    #    format json
    #}

    # Gitea under /gitea
    @gitea path /gitea*
    route @gitea {
        uri strip_prefix /gitea
        reverse_proxy gitea:3000
    }
    
    # Jenkins under /jenkins
    @jenkins path /jenkins* 
    reverse_proxy @jenkins jenkins:8080

}

